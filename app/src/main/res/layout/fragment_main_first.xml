<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainFirst">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/voilet">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            android:background="@color/colorWhite"
            android:layout_margin="0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Raw Material Calculations"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:background="@color/colorWhite"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Leaking or Non-Leaking"
                            android:textAlignment="center"
                            android:fontFamily="@font/open_sans"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="18dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:clickable="true"
                    android:onClick="onClickLeaking"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:background="@drawable/brunch"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="175dp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:padding="5dp"
                                android:src="@drawable/ic_arrow_forward_black_24dp"
                                android:layout_width="40dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="end"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="LEAKING"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="#9000"
                        android:textAlignment="center"
                        android:fontFamily="@font/open_sans"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:clickable="true"
                    android:onClick="onClickNonLeaking"
                    android:layout_margin="10dp"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:background="@drawable/brunchtwo"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="175dp" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:padding="5dp"
                                android:src="@drawable/ic_arrow_forward_black_24dp"
                                android:layout_width="40dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="end"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="NON - LEAKING"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="#9000"
                        android:textAlignment="center"
                        android:fontFamily="@font/open_sans"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>